{% set months = { 01: 'Janvier', 02: 'Février', 03: 'Mars', 04: 'Avril', 05: 'Mai', 06: 'Juin', 07: 'Juillet', 08: 'Août', 09: 'Septembre', 10: 'Octobre', 11: 'Novembre', 12: 'Décembre' } %}

{% extends "Emails/base_email_template.html.twig" %}

{% block title %}Demande de matériel{% endblock %}

{% block mail_content %}
    <tr>
        <td>
            <p>
                Bonjour {{ recipient.firstname }} {{ recipient.lastname }},<br />
                <br />
                La compilation des pointages de {{ months[month] }} {{ year }} de l'etablissement {{ etablissement }} a été validé par {{ sender }} et est en attente de votre validation.<br />
                Vous pouvez traiter cette compilation en <a href='{{ redirectionUrl }}'>cliquant ici</a>.
            </p>
        </td>
    </tr>
{% endblock %}