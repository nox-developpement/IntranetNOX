{% extends "::layout.html.twig" %}

{% block titrePage %} Fiche d'evaluation des sous-traitants {% endblock %}

{% block messageAccueil %} Fiche d'Ã©valuation des sous-traitants {% endblock %}

{% block contenu %}

    <style>
        #formulaireFicheEvaluationST {
            border: none;
            width: 70%;
            margin: auto;
            padding: 0;
        }

        #formulaireFicheEvaluationST table {
            table-layout: fixed;
        }

        #formulaireFicheEvaluationST table, #formulaireFicheEvaluationST table tr, #formulaireFicheEvaluationST table th, #formulaireFicheEvaluationST table td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        #formulaireFicheEvaluationST table td, #formulaireFicheEvaluationST table th {
            color: rgb(147, 63, 105);
            padding: 1em;
        }

        #formulaireFicheEvaluationST p {
            color: black;
        }

        #formulaireFicheEvaluationST h3 {
            color: rgb(147, 63, 105);
            margin-top: 3em;
            margin-bottom: 0;
        }

        .questionTd {
            width: 35%;
        }


        .questionLabel {
            display: block;
            color: rgb(168,165,163);
            font-weight: bold;
        }

        .questionTexte {
            color:rgb(31,78,121);
            font-weight:bold;
        }

        .questionDetails {
            display: block;
            color: black;
            font-style: italic;
        }

        .commentaire textarea {
            display: block;
            box-sizing: border-box;
            width: 100%;
            height: 5em;
            margin: 0; 
            resize: none;
        }

        #validationFormulaireFicheEvaluationST {
            text-align: center;
        }

        #validationFormulaireFicheEvaluationST button {
            color: rgb(147, 63, 105);
            border-color: rgb(175,133,153);
            font-size: 1.5em;
            /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,f6f6f6+47,ededed+100;White+3D+%231 */
            background: rgb(255,255,255); /* Old browsers */
            background: -moz-linear-gradient(top,  rgba(255,255,255,1) 0%, rgba(246,246,246,1) 47%, rgba(237,237,237,1) 100%); /* FF3.6-15 */
            background: -webkit-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%); /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to bottom,  rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ededed',GradientType=0 ); /* IE6-9 */
        }

        #validationFormulaireFicheEvaluationST button:hover { 
            color: rgb(147, 63, 105);
            border-color: rgb(147, 63, 105);
        }

        .notationTd{
            font-size:13px;
            width: 35%;
        }
        
        #ficheEvaluationTitle {
            margin: 0;
        }

    </style>

    <div id='formulaireFicheEvaluationST'>
        <h2 id='ficheEvaluationTitle'>
            Evaluation : {{ infoFicheEvaluation.DenominationSocialeST }}<br />
            SIRET : {{ infoFicheEvaluation.SiretST }}
        </h2>
        
        <h3>1. QUALITE</h3>
        <br />
        <table>    
            {% for key, ficheEvaluation in ficheEvaluationST if key >= 1 and key <= 5 %}
                <tr>
                    <td class='questionTd' colspan='1'>
                        <span class='questionTexte'>{{ ficheEvaluation['Question'] }}</span>
                    </td>
                    <td class='notationTd' colspan='1'>{{ ficheEvaluation['Reponse'] }}</td>
                </tr>
            {% endfor %}
        </table>
        <br />
        <h3>2. PRIX</h3> 
        <br />

        <table>
            {% for key, ficheEvaluation in ficheEvaluationST if key >= 6 and key <= 9 %}
                <tr>
                    <td class='questionTd'>
                        <span class='questionTexte'>{{ ficheEvaluation['Question'] }}</span>
                    </td>
                    <td class='notationTd'>{{ ficheEvaluation['Reponse'] }}</td>
                </tr>
            {% endfor %}
        </table>
        <br />
        <h3>3. DELAI</h3>
        <br />
        <table>
            {% for key, ficheEvaluation in ficheEvaluationST if key >= 10 and key <= 12 %}
                <tr>
                    <td class='questionTd'>
                        <span class='questionTexte'>{{ ficheEvaluation['Question'] }}</span>
                    </td>
                    <td class='notationTd'>{{ ficheEvaluation['Reponse'] }}</td>
                </tr>
            {% endfor %}
        </table>
        <br />
        <h3>4. RELATIONS FOURNISSEUR</h3>
        <br />
        <table>
            {% for key, ficheEvaluation in ficheEvaluationST if key >= 13 and key <= 15 %}
                <tr>
                    <td class='questionTd'>
                        <span class='questionTexte'>{{ ficheEvaluation['Question'] }}</span>
                    </td>
                    <td class='notationTd'>{{ ficheEvaluation['Reponse'] }}</td>
                </tr>
            {% endfor %}
        </table>
        <br />
    </div>

{% endblock %}