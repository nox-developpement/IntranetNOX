{% extends "layout.html.twig" %}

{% block titrePage %} Compilation pointage NOX IP {% endblock %}

{% block messageAccueil %}Compilation pointage NOX IP{% endblock %}

{% block contenu %}

    <style>
        #formCompilationNOXIP {
            width: 70%;
            margin: auto;
            text-align: center;
        }
        
        #formCompilationNOXIP form {
            display: inline-block;
            width: auto;
            border: 2px outset #1F4E79;
            background-color: rgba(255,255,255, 0.6);
        }
        
        #formCompilationNOXIP p {
            text-align: center;
        }
    </style>

    <div id="formCompilationNOXIP">
        {{ form_start(formCompilationDate) }}
        <p>
            {{ form_label(formCompilationDate.date) }} : 
            {{ form_widget(formCompilationDate.children['date'].children["month"]) }}
            {{ form_widget(formCompilationDate.children['date'].children["year"]) }}
        </p>
        <p>
            {{ form_widget(formCompilationDate.download) }}
        </p>
        {{ form_widget(formCompilationDate.children['date'].children["day"], {'attr': {'style': 'display: none'}}) }}
        {{ form_end(formCompilationDate) }}
    </div>

{% endblock %}